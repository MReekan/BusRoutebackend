<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="343dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="0dp"
        android:text="Add Travelling Path Details"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editFirstLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="45dp"
        android:hint="Enter start place"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editSecondLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editFirstLocation"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Enter destination place"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="94dp" />

    <EditText
        android:id="@+id/editTravellingDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editSecondLocation"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Enter travelling distance"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="165dp" />

    <EditText
        android:id="@+id/editTicketFees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editSecondLocation"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:hint="Enter ticket fees"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="165dp" />

    <Button
        android:id="@+id/addTravellingPath"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTravellingDistance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Add Travelling Path"
        android:textColor="@color/colorPrimary"
        android:background="@android:color/holo_blue_light"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="248dp" />

    <ListView
        android:id="@+id/listViewTravellingPath"
        android:layout_width="403dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/addTravellingPath"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="56dp"
        android:background="@android:color/holo_blue_light"
        android:headerDividersEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />


</RelativeLayout>